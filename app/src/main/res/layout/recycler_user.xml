<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r_item_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="start"
    android:orientation="horizontal"
    android:paddingStart="5dp"
    android:paddingEnd="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/r_img_user"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/r_linearlayout_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/r_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="@string/curent_individual"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/r_status_user"
            android:inputType="number"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:paddingEnd="5dp"
            android:maxLength="10"
            android:imeOptions="actionDone"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_individual"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>